@model TNA.BLL.DTOs.UserDTO

@{
    ViewData["Title"] = "Deshabilitar usuario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<section class="container mt-4">
    <div class="card bg-dark border-0 mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3 text-light">Deshabilitar cuenta</h4>
            <p class="text-light">¿Estás seguro que deseas deshabilitar a <strong>@Model.Nickname</strong>? La acción puede ser revertida por un administrador.</p>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="mt-4">
                    <button type="submit" class="btn btn-warning text-white me-2"><i class="bi bi-person-x"></i> Deshabilitar</button>
                    <a asp-action="Index" class="btn btn-light">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</section>
