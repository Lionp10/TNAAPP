@model TNA.BLL.DTOs.UserDTO

@{
    ViewData["Title"] = "Detalles usuario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<section class="container mt-4">
    <div class="card bg-dark border-0 mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3">@Model.Nickname</h4>

            <dl class="row mb-0">
                <dt class="col-sm-3 text-light">Email</dt>
                <dd class="col-sm-9 text-light">@Model.Email</dd>

                <dt class="col-sm-3 text-light">RoleId</dt>
                <dd class="col-sm-9 text-light">@Model.RoleId</dd>

                <dt class="col-sm-3 text-light">MemberId</dt>
                <dd class="col-sm-9 text-light">@Model.MemberId?.ToString()</dd>

                <dt class="col-sm-3 text-light">Creado</dt>
                <dd class="col-sm-9 text-light">@(Model.CreatedAt.HasValue? Model.CreatedAt.Value.ToString("yyyy-MM-dd HH:mm") : "-")</dd>

                <dt class="col-sm-3 text-light">Estado</dt>
                <dd class="col-sm-9">
                    @if (Model.Enabled)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2"><i class="bi bi-pencil"></i> Editar</a>
                <a asp-action="Index" class="btn btn-light">Volver</a>
            </div>
        </div>
    </div>
</section>
