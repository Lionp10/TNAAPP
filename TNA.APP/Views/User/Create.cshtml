@model TNA.BLL.DTOs.UserCreateDTO

@{
    ViewData["Title"] = "Crear usuario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .btn-group.w-100 {
        display: flex;
        gap: 0;
    }
    .btn-group.w-100 .btn {
        flex: 1 1 0;
        border-radius: 0.375rem; 
    }
    .btn-group.w-100 .btn:first-child {
        border-top-left-radius: 0.375rem;
        border-bottom-left-radius: 0.375rem;
    }
    .btn-group.w-100 .btn:last-child {
        border-top-right-radius: 0.375rem;
        border-bottom-right-radius: 0.375rem;
    }

    .btn-check:checked + .btn.btn-outline-success,
    .btn-check:checked + .btn.btn-outline-danger {
        color: #fff !important;
        background-image: none;
    }

    .btn-check:checked + .btn.btn-outline-success {
        background-color: #198754;
        border-color: #198754;
    }
    .btn-check:checked + .btn.btn-outline-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn.btn-outline-success, .btn.btn-outline-danger {
        box-shadow: none;
    }

    .form-label + .btn-group.w-100 { margin-top: .35rem; }
</style>

<section class="container mt-4">
    <div class="card bg-dark border-0 mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Nueva cuenta</h4>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nickname" class="form-label text-light">Nickname</label>
                    <input asp-for="Nickname" class="form-control" />
                    <span asp-validation-for="Nickname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-light">Email</label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-light">Contraseña</label>
                    <input asp-for="Password" type="password" autocomplete="new-password" class="form-control" />
                    <div class="form-text">La contraseña se almacenará de forma segura (hash).</div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="RoleId" class="form-label text-light">Rol</label>
                        <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-select">
                            <option value="">-- Seleccionar rol --</option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="MemberId" class="form-label text-light">Es miembro? (opcional)</label>
                        <select asp-for="MemberId" class="form-select" asp-items="ViewBag.Members">
                            <option value="">-- Ninguno --</option>
                        </select>
                        <span asp-validation-for="MemberId" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label text-light">Habilitado</label>

                        <div class="btn-group w-100 gap-1" role="group" aria-label="Habilitado">
                            @{
                                var enabledValue = Model?.Enabled ?? true;
                                var yesChecked = enabledValue ? "checked" : null;
                                var noChecked = !enabledValue ? "checked" : null;
                            }

                            <input type="radio" class="btn-check" name="Enabled" id="enabledYes" value="true" autocomplete="off" @(yesChecked) />
                            <label class="btn btn-outline-success" for="enabledYes">Si</label>

                            <input type="radio" class="btn-check" name="Enabled" id="enabledNo" value="false" autocomplete="off" @(noChecked) />
                            <label class="btn btn-outline-danger" for="enabledNo">No</label>
                        </div>

                        <span asp-validation-for="Enabled" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-accent"><i class="bi bi-save"></i> Crear</button>
                    <a asp-action="Index" class="btn btn-light">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
