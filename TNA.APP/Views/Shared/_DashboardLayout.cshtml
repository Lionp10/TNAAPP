<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/favicontna.ico" type="image/x-icon">
    <title>@ViewData["Title"] - TNA ESPORT</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/stats.css" />
    <link href="~/css/sidebar.css" rel="stylesheet" />
</head>

<body>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-brand">
                <a href="@Url.Action("Privacy", "Home")" class="text-decoration-none">
                    <img src="~/images/TNAESPORT_Logo.webp" alt="TNA Logo" class="sidebar-brand-icon" style="width: 45px; height: 45px;" />
                    <span class="sidebar-brand-text text-light">TNA ESPORT</span>
                </a>                
            </div>
            <button class="sidebar-toggle desktop-toggle" id="sidebarToggle">
                <i class="bi bi-chevron-left"></i>
            </button>
        </div>

        <div class="sidebar-menu">
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a href="@Url.Action("Index", "User")" class="sidebar-nav-link">
                        <i class="bi bi-people-fill"></i>
                        <span class="sidebar-nav-text">Usuarios</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="@Url.Action("Index", "ClanMember")" class="sidebar-nav-link">
                        <i class="bi bi-person-badge-fill"></i>
                        <span class="sidebar-nav-text">Miembros</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="/torneos" class="sidebar-nav-link">
                        <i class="bi bi-trophy"></i>
                        <span class="sidebar-nav-text">Torneos</span>
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <div class="mb-2">
                    <a href="@Url.Action("Index","Home")" class="sidebar-nav-link">
                        <i class="bi bi-arrow-left-circle me-2"></i>
                        <span class="sidebar-nav-text">Volver al sitio</span>
                    </a>
                </div>

                <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0 p-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="sidebar-nav-link btn btn-link text-start w-100 logout-link" style="text-decoration:none;">
                        <i class="bi bi-box-arrow-right"></i>
                        <span class="sidebar-nav-text">Cerrar sesión</span>
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <button class="mobile-sidebar-toggle" id="mobileSidebarToggle">
        <i class="bi bi-list"></i>
    </button>

    <div class="main-wrapper" id="mainWrapper">
        <main class="content-wrapper">
            @RenderBody()
        </main>

        <footer class="site-footer">
            <div class="container-fluid">
                <div class="small text-muted-tna">© @DateTime.Now.Year TNA ESPORT — Todos los derechos reservados</div>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="~/js/sidebar.js"></script>

    @await Html.PartialAsync("_TempMessageModal")

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
