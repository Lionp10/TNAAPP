@using System.Security.Claims
<!DOCTYPE html>
<html lang="es">

@{
    string IsActivePath(string startsWith)
    {
        var path = Context.Request.Path.Value ?? "/";
        
        if (startsWith == "/")
        {
            return path == "/" ? "active" : "";
        }

        if (!startsWith.StartsWith("/")) startsWith = "/" + startsWith;

        if (path.Equals(startsWith, StringComparison.OrdinalIgnoreCase)
            || path.StartsWith(startsWith + "/", StringComparison.OrdinalIgnoreCase)
            || path.EndsWith(startsWith, StringComparison.OrdinalIgnoreCase)
            || path.IndexOf(startsWith, StringComparison.OrdinalIgnoreCase) >= 0)
        {
            return "active";
        }

        return "";
    }
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/favicontna.ico" type="image/x-icon">
    <title>@ViewData["Title"] - TNA ESPORT</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/stats.css" rel="stylesheet" />
    <link href="~/css/responsive-table.css" rel="stylesheet" />

    <style>
        .hero-illustration {
            width: 100%;
            max-width: 220px;
            height: auto;
            object-fit: contain;
            filter: drop-shadow(0 10px 24px rgba(0,0,0,0.5));
            transition: transform .18s ease;
        }

        /* Make sure fixed navbar is above content */
        .site-navbar {
            z-index: 1040;
        }

        /* Smooth transition when body padding changes */
        body {
            transition: padding-top .18s ease;
        }

        /* Expanded mobile menu: give it a background and spacing so content below isn't visible through it */
        .navbar-collapse.show {
            background: rgba(7, 11, 16, 0.96);
            padding: 0.75rem 1rem;
            border-bottom: 1px solid rgba(255,255,255,0.03);
        }

        /* Mobile stacked links: readable and spacing */
        .navbar-collapse .navbar-nav .nav-link {
            color: var(--text-secondary, #e2e8f0) !important;
            padding: 0.5rem 0.25rem;
        }

        /* Active underline aligned at the start of the link text (no centering) */
        .navbar-nav .nav-link {
            position: relative;
        }

        .navbar-nav .nav-link.active::after {
            content: "";
            position: absolute;
            height: 4px;
            width: 36px;
            left: 0; /* start under the text */
            transform: none;
            bottom: -6px;
            background: var(--primary-blue, #0ea5e9);
            border-radius: 4px;
        }

        /* Slight tweak for very small screens */
        @@media (max-width: 576px) {
            .navbar-nav .nav-link.active::after {
                width: 28px;
                bottom: -6px;
            }
            .navbar-collapse .navbar-nav .nav-link {
                padding-left: 0;
            }
        }

        /* Ensure dropdown toggle (user) links color consistent */
        .navbar-nav .dropdown-toggle {
            color: var(--text-secondary, #e2e8f0) !important;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg site-navbar fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2" href="~/">
                <img src="~/images/TNAESPORT_Logo.webp" onerror="this.src='~/favicontna.ico';" alt="TNA" class="brand-logo" />
                <div class="brand-text-wrap">
                    <span class="brand-text">TNA</span>
                    <small class="brand-sub">E-SPORT</small>
                </div>
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                <ul class="navbar-nav align-items-lg-center">
                    <li class="nav-item">
                        <a class="nav-link @IsActivePath("/")" href="~/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActivePath("/Members")" href="@Url.Action("Members", "Home")">Miembros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActivePath("/Tournaments")" href="@Url.Action("Tournaments", "Home")">Torneos</a>
                    </li>

                    @* Area de autenticación: mostrar "Iniciar sesión" o dropdown con nickname *@
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        var nickname = User.Identity?.Name ?? User.FindFirst(ClaimTypes.Name)?.Value ?? "Usuario";
                        var idClaim = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

                        // leer claim roleid (si existe)
                        var roleClaim = User.FindFirst("roleid")?.Value;
                        int roleId = 0;
                        int.TryParse(roleClaim, out roleId);

                        // Si no es admin (roleId != 1) apuntamos al Home/Profile; si es admin apuntamos a User/Details
                        var profileUrl = roleId == 1
                            ? Url.Action("Details", "User", new { id = idClaim }) ?? "#"
                            : Url.Action("Profile", "Home") ?? "#";

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @nickname
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="@profileUrl">
                                        <i class="bi bi-person me-2"></i> Perfil
                                    </a>
                                </li>

                                @* Mostrar "Panel admin" solo si roleId == 1 *@
                                @if (roleId == 1)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Privacy","Home")">
                                            <i class="bi bi-speedometer2 me-2"></i> Panel admin
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                }
                                else
                                {
                                    <li><hr class="dropdown-divider" /></li>
                                }

                                <li>
                                    <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @IsActivePath("/Auth")" href="@Url.Action("Index","Auth")">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar sesión
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @if (IsSectionDefined("Hero"))
    {
        @RenderSection("Hero")
    }
    else
    {
        <header class="hero">
            <div class="hero-overlay"></div>
            <div class="container hero-content">
                <div class="row">
                    <div class="col-lg-8 d-flex flex-column justify-content-center">
                        <h1 class="hero-title">Juega con nosotros</h1>
                        <p class="hero-sub">Forma parte del clan, conoce nuevos jugadores y participa en torneos exclusivos.</p>
                        <div class="mt-4">
                            <a href="https://discord.gg/ebYXx7F2g2" target="_blank" class="btn btn-accent me-2"><i class="bi bi-discord"></i> Entrar al Discord</a>
                        </div>
                    </div>
                    <div class="col-lg-4 d-flex justify-content-center align-items-center">
                        <img src="~/images/ElPantera.webp" alt="El Pantera" class="hero-illustration" />
                    </div>
                </div>
            </div>
        </header>
    }

    <main class="content-wrapper">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <div class="d-flex align-items-center justify-content-center justify-content-md-start gap-2">
                        <img src="~/images/TNAESPORT_Logo.webp" onerror="this.src='~/favicontna.ico';" alt="TNA" class="footer-logo" />
                        <div class="brand-text-wrap">
                            <span class="brand-text">TNA</span>
                            <small class="brand-sub">E-SPORT</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 text-center text-md-end">
                    <div class="social-icons d-inline-flex align-items-center" role="list">
                        <a class="social-link instagram" href="https://www.instagram.com/tnaesport/" target="_blank" rel="noopener noreferrer" aria-label="Instagram" role="listitem">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a class="social-link discord ms-2" href="https://discord.gg/ebYXx7F2g2" target="_blank" rel="noopener noreferrer" aria-label="Discord" role="listitem">
                            <i class="bi bi-discord"></i>
                        </a>
                        <a class="social-link youtube ms-2" href="https://www.youtube.com/@@tnae-sport2459" target="_blank" rel="noopener noreferrer" aria-label="YouTube" role="listitem">
                            <i class="bi bi-youtube"></i>
                        </a>
                    </div>

                    <div class="small text-muted-tna mt-2">© @DateTime.Now.Year TNA ESPORT — Todos los derechos reservados</div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <script>
        (function () {
            var nav = document.querySelector('.site-navbar');
            if (!nav) return;

            function adjustBodyPadding() {
                try {
                    var h = Math.ceil(nav.getBoundingClientRect().height);
                    // Apply padding to body so page content is always pushed below the fixed navbar
                    document.body.style.paddingTop = h + 'px';
                } catch (e) {
                    // no-op
                }
            }

            // inicializar cuando DOM esté listo
            document.addEventListener('DOMContentLoaded', function () {
                adjustBodyPadding();
            }, { passive: true });

            // Observador de cambios en el navbar (incluye cuando collapse cambia tamaño)
            if (window.ResizeObserver) {
                try {
                    var ro = new ResizeObserver(function () { adjustBodyPadding(); });
                    ro.observe(nav);
                } catch (e) { /* ignore */ }
            } else {
                window.addEventListener('resize', adjustBodyPadding, { passive: true });
            }

            // Eventos collapse de Bootstrap para recalcular cuando el menú móvil se abre/cierra
            var collapseEl = document.getElementById('mainNav');
            if (collapseEl) {
                collapseEl.addEventListener('shown.bs.collapse', adjustBodyPadding);
                collapseEl.addEventListener('hidden.bs.collapse', adjustBodyPadding);
            }

            // Aseguramos recalculo en load por si hay imágenes que cambian el tamaño del navbar
            window.addEventListener('load', function () { adjustBodyPadding(); }, { passive: true });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
