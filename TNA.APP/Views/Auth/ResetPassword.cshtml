@model TNA.APP.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Restablecer contraseña";
}

<link href="~/css/auth.css" rel="stylesheet" />

@section Hero {
    <section class="auth-section">
        <div class="auth-container">
            <div class="auth-wrapper">
                <!-- Brand Header -->
                <div class="auth-brand">
                    <div class="brand-icon">
                        <i class="bi bi-controller"></i>
                    </div>
                    <div class="brand-text-wrap">
                        <span class="brand-text">TNA ESPORT</span>
                        <span class="brand-sub">Restablecer contraseña</span>
                    </div>
                </div>

                <!-- Reset Password Card -->
                <div class="auth-card">
                    <div class="auth-card-header">
                        <h1 class="auth-title">Restablece tu contraseña</h1>
                        <p class="auth-subtitle">Ingresa una nueva contraseña segura para tu cuenta</p>
                    </div>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success" style="background: rgba(16, 185, 129, 0.1); border: 1px solid rgba(16, 185, 129, 0.2); border-radius: 8px; padding: 1rem; color: #6ee7b7; font-size: 0.875rem; margin-bottom: 1rem;">
                            <i class="bi bi-check-circle me-2"></i>
                            @ViewBag.Message
                        </div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" style="background: rgba(239,68,68,0.06); border: 1px solid rgba(239,68,68,0.12); border-radius: 8px; padding: 1rem; color: var(--text-danger); font-size: 0.875rem; margin-bottom: 1rem;">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @ViewBag.Error
                        </div>
                    }

                    <form asp-action="ResetPassword" method="post" class="auth-form">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Email" />

                        <div asp-validation-summary="ModelOnly" class="auth-error-summary"></div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-envelope"></i>
                                Email
                            </label>
                            <input asp-for="Email" class="form-input" readonly />
                            <span asp-validation-for="Email" class="form-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock"></i>
                                Nueva contraseña
                            </label>
                            <div class="password-input-wrapper">
                                <input asp-for="Password" class="form-input" type="password" autocomplete="new-password" placeholder="••••••••" />
                                <button type="button" class="password-toggle" data-target="Password">
                                    <i class="bi bi-eye" id="toggle-Password"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="form-error"></span>
                            <small style="color: var(--text-muted); font-size: 0.8125rem; margin-top: 0.5rem; display: block;">
                                Mínimo 6 caracteres, incluir mayúscula, minúscula, número y carácter especial.
                            </small>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="bi bi-lock-fill"></i>
                                Confirmar contraseña
                            </label>
                            <div class="password-input-wrapper">
                                <input asp-for="ConfirmPassword" class="form-input" type="password" autocomplete="new-password" placeholder="••••••••" />
                                <button type="button" class="password-toggle" data-target="ConfirmPassword">
                                    <i class="bi bi-eye" id="toggle-ConfirmPassword"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="form-error"></span>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-primary-auth">
                                <i class="bi bi-key-fill"></i>
                                <span>Restablecer contraseña</span>
                            </button>

                            <div class="divider">
                                <span>o</span>
                            </div>

                            <a asp-action="Index" class="btn-secondary-auth">
                                <i class="bi bi-arrow-left"></i>
                                <span>Volver al inicio de sesión</span>
                            </a>
                        </div>
                    </form>

                    <div style="margin-top: 1.5rem; padding-top: 1rem; border-top: 1px solid var(--auth-input-border); text-align:center;">
                        <p style="font-size:0.9rem; color:var(--text-secondary); margin-bottom:0.5rem;">
                            Si el enlace no funciona, copia y pega la URL completa desde el correo en tu navegador o solicita un nuevo enlace.
                        </p>
                    </div>
                </div>

                <!-- Footer -->
                <div class="auth-footer">
                    <p>¿Necesitas ayuda? <a href="#" class="support-link">Contacta soporte</a></p>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function() {
            // Toggle password visibility for both fields
            document.querySelectorAll('.password-toggle').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var targetName = btn.getAttribute('data-target');
                    var input = document.querySelector('input[name="' + targetName + '"]');
                    var icon = document.getElementById('toggle-' + targetName);
                    if (!input) return;
                    if (input.type === 'password') {
                        input.type = 'text';
                        icon.className = 'bi bi-eye-slash';
                    } else {
                        input.type = 'password';
                        icon.className = 'bi bi-eye';
                    }
                });
            });

            // Focus first editable input
            var pw = document.querySelector('input[name="Password"]');
            if (pw) pw.focus();

            // Submission feedback
            document.querySelector('form').addEventListener('submit', function() {
                var submitBtn = this.querySelector('button[type="submit"]');
                if (!submitBtn) return;
                var originalText = submitBtn.querySelector('span')?.textContent || '';
                submitBtn.disabled = true;
                if (submitBtn.querySelector('span')) submitBtn.querySelector('span').textContent = 'Procesando...';
                var icon = submitBtn.querySelector('i');
                if (icon) {
                    icon.className = 'bi bi-hourglass-split';
                }
                // In case of no redirect, re-enable after 5s
                setTimeout(function() {
                    submitBtn.disabled = false;
                    if (submitBtn.querySelector('span')) submitBtn.querySelector('span').textContent = originalText;
                    if (icon) icon.className = 'bi bi-key-fill';
                }, 5000);
            });
        })();
    </script>
}
