@model TNA.APP.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Recuperar contraseña";
}

<link href="~/css/auth.css" rel="stylesheet" />

@section Hero {
    <section class="auth-section">
        <div class="auth-container">
            <div class="auth-wrapper">
                <div class="auth-brand">
                    <div class="brand-icon">
                        <i class="bi bi-controller"></i>
                    </div>
                    <div class="brand-text-wrap">
                        <span class="brand-text">TNA ESPORT</span>
                        <span class="brand-sub">Recuperar contraseña</span>
                    </div>
                </div>

                <div class="auth-card">
                    <div class="auth-card-header">
                        <h1 class="auth-title">¿Olvidaste tu contraseña?</h1>
                        <p class="auth-subtitle">No te preocupes, te ayudamos a recuperarla</p>
                    </div>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success" style="background: rgba(16, 185, 129, 0.1); border: 1px solid rgba(16, 185, 129, 0.2); border-radius: 8px; padding: 1rem; color: #6ee7b7; font-size: 0.875rem; margin-bottom: 1rem;">
                            <i class="bi bi-check-circle me-2"></i>
                            @ViewBag.Message
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post" class="auth-form">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="auth-error-summary"></div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i>
                                Email
                            </label>
                            <input asp-for="Email" class="form-input" placeholder="tu@correo.com" autocomplete="email" />
                            <span asp-validation-for="Email" class="form-error"></span>
                            <small style="color: var(--text-muted); font-size: 0.8125rem; margin-top: 0.5rem; display: block;">
                                Ingresa el email asociado a tu cuenta y te enviaremos las instrucciones para restablecer tu contraseña.
                            </small>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-primary-auth">
                                <i class="bi bi-send"></i>
                                <span>Enviar instrucciones</span>
                            </button>

                            <div class="divider">
                                <span>o</span>
                            </div>

                            <a asp-action="Index" class="btn-secondary-auth">
                                <i class="bi bi-arrow-left"></i>
                                <span>Volver al inicio de sesión</span>
                            </a>
                        </div>
                    </form>

                    <div style="margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid var(--auth-input-border);">
                        <div style="text-align: center;">
                            <h3 style="color: var(--text-primary); font-size: 1rem; font-weight: 600; margin-bottom: 1rem;">
                                ¿Aún tienes problemas?
                            </h3>
                            <div style="display: flex; flex-direction: column; gap: 0.75rem; font-size: 0.875rem; color: var(--text-secondary);">
                                <div style="display: flex; align-items: center; gap: 0.5rem; justify-content: center;">
                                    <i class="bi bi-info-circle" style="color: var(--brand-primary);"></i>
                                    <span>Revisa tu carpeta de spam o correo no deseado</span>
                                </div>
                                <div style="display: flex; align-items: center; gap: 0.5rem; justify-content: center;">
                                    <i class="bi bi-clock" style="color: var(--brand-primary);"></i>
                                    <span>El email puede tardar hasta 5 minutos en llegar</span>
                                </div>
                                <div style="display: flex; align-items: center; gap: 0.5rem; justify-content: center;">
                                    <i class="bi bi-headset" style="color: var(--brand-primary);"></i>
                                    <span>Si no recibes el email, <a href="#" class="support-link">contacta soporte</a></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="auth-footer">
                    <p>¿Recordaste tu contraseña? <a asp-action="Index" class="support-link">Iniciar sesión</a></p>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('input[name="Email"]').focus();

            $('form').on('submit', function() {
                const submitBtn = $(this).find('button[type="submit"]');
                const originalText = submitBtn.find('span').text();

                submitBtn.prop('disabled', true);
                submitBtn.find('span').text('Enviando...');
                submitBtn.find('i').removeClass('bi-send').addClass('bi-hourglass-split');

                setTimeout(function() {
                    submitBtn.prop('disabled', false);
                    submitBtn.find('span').text(originalText);
                    submitBtn.find('i').removeClass('bi-hourglass-split').addClass('bi-send');
                }, 3000);
            });
        });
    </script>
}
