                                var r = Model.Rankings[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@(string.IsNullOrEmpty(r.PlayerNickname) ? "-" : r.PlayerNickname)</td>
                                    <td>@r.MatchesCount</td>
                                    <td>@r.TotalDBNOs</td>
